@model HankoSpa.DTOs.CitaDTO

@{
    ViewBag.Title = "Editar Cita";
}

<h2>✏️ Editar Cita</h2>

@using (Html.BeginForm("Edit", "Citas", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.CitaId)

    <div class="form-horizontal">
        <div class="form-group mb-3">
            @Html.LabelFor(model => model.FechaCita, htmlAttributes: new { @class = "form-label" })
            @Html.TextBoxFor(model => model.FechaCita, new { @class = "form-control", type = "date" })
            @Html.ValidationMessageFor(model => model.FechaCita, "", new { @class = "text-danger" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.HoraCita, htmlAttributes: new { @class = "form-label" })
            @Html.TextBoxFor(model => model.HoraCita, new { @class = "form-control", type = "time" })
            @Html.ValidationMessageFor(model => model.HoraCita, "", new { @class = "text-danger" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.EstadoCita, htmlAttributes: new { @class = "form-label" })
            @Html.TextBoxFor(model => model.EstadoCita, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.EstadoCita, "", new { @class = "text-danger" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.UsuarioID, htmlAttributes: new { @class = "form-label" })
            @Html.TextBoxFor(model => model.UsuarioID, new { @class = "form-control", type = "number" })
            @Html.ValidationMessageFor(model => model.UsuarioID, "", new { @class = "text-danger" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.ServicioID, "Servicios")
            @Html.DropDownListFor(model => model.ServicioID, (SelectList)ViewBag.Servicios, "Seleccione un servicio", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ServicioID)
        </div>

        <button type="submit" class="btn btn-warning">Guardar cambios</button>
        <a href="@Url.Action("Index", "Citas")" class="btn btn-secondary ms-2">Cancelar</a>
    </div>
}

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.select2-multiple').select2({
                placeholder: "Seleccione uno o varios servicios",
                width: '100%'
            });
        });
    </script>
}
