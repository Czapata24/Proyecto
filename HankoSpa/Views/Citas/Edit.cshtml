@model HankoSpa.Models.Cita

@{
    ViewData["Title"] = "Editar Cita";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mt-4 mb-3">✏️ Editar Cita</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="CitaId" />
    <input type="hidden" asp-for="UsuarioID" />

    <div class="mb-3">
        <label asp-for="FechaCita" class="form-label">Fecha</label>
        <input asp-for="FechaCita" class="form-control" type="date" />
        <span asp-validation-for="FechaCita" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="HoraCita" class="form-label">Hora</label>
        <input asp-for="HoraCita" class="form-control" type="time" />
        <span asp-validation-for="HoraCita" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="EstadoCita" class="form-label">Estado</label>
        <select asp-for="EstadoCita" class="form-select">
            <option value="Pendiente">Pendiente</option>
            <option value="Confirmada">Confirmada</option>
            <option value="Cancelada">Cancelada</option>
        </select>
        <span asp-validation-for="EstadoCita" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">💾 Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
