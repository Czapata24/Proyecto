@model HankoSpa.Models.Cita

@{
    ViewData["Title"] = "Detalle de la Cita";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-4">
    <h2 class="text-primary">📋 Detalle de la Cita</h2>
    <hr />

    <div class="card shadow-sm border-0 mt-3">
        <div class="card-body">
            <dl class="row fs-5">
                <dt class="col-sm-4">📅 Fecha:</dt>
                <dd class="col-sm-8">@Model.FechaCita.ToShortDateString()</dd>

                <dt class="col-sm-4">🕒 Hora:</dt>
                <dd class="col-sm-8">@Model.HoraCita.ToString(@"hh\:mm")</dd>

                <dt class="col-sm-4">📌 Estado:</dt>
                <dd class="col-sm-8">@Model.EstadoCita</dd>

                @* Campo oculto: UsuarioID, mantenido en el modelo pero no mostrado *@
                @* <dt class="col-sm-4">Usuario ID:</dt>
                   <dd class="col-sm-8">@Model.UsuarioID</dd> *@
            </dl>

            <a asp-action="Index" class="btn btn-outline-secondary mt-3">⬅️ Volver</a>
        </div>
    </div>
</div>
