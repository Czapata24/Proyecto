@model HankoSpa.Models.Servicio

@{
    ViewData["Title"] = "Editar Servicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mt-4 mb-3">✏️ Editar Tratamiento</h2>

<form asp-controller="Servicio" asp-action="Edit" method="post">
    <input type="hidden" asp-for="ServicioId" />

    <div class="mb-3">
        <label asp-for="NombreServicio" class="form-label">Nombre del Servicio</label>
        <input asp-for="NombreServicio" class="form-control" />
        <span asp-validation-for="NombreServicio" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DescripcionServicio" class="form-label">Descripción</label>
        <textarea asp-for="DescripcionServicio" class="form-control" rows="4"></textarea>
        <span asp-validation-for="DescripcionServicio" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-warning">Guardar cambios</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
