@model IEnumerable<HankoSpa.DTOs.ServiceDTO>

@{
    ViewBag.Title = "Servicios";
}

<h2>📋 Lista de Servicios</h2>

<p>
    <a href="@Url.Action("Create", "AdminServicio")" class="btn btn-success">➕ Agregar nuevo servicio</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Nombre del Servicio</th>
            <th>Descripción</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="4">No hay servicios registrados.</td>
            </tr>
        }
        else
        {
            int count = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td>@count</td>
                    <td>@item.NombreServicio</td>
                    <td>@item.DescripcionServicio</td>
                    <td>
                        <a href="@Url.Action("Edit", "AdminServicio", new { id = item.ServicioId })" class="btn btn-primary">✏️
                            Editar</a>
                        <a href="@Url.Action("Delete", "AdminServicio", new { id = item.ServicioId })"
                            class="btn btn-danger">🗑️ Eliminar</a>
                    </td>
                </tr>
                count++;
            }
        }
    </tbody>
</table>
