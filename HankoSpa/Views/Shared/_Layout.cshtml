<body>
    <header>
        <nav class="navbar navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid @((ViewContext.RouteData.Values["controller"]?.ToString() == "Servicio" || ViewContext.RouteData.Values["controller"]?.ToString() == "Citas") ? "d-flex justify-content-between align-items-center" : "d-flex flex-column align-items-start mt-4")">
                <!-- Título HankoSpa -->
                <a class="navbar-brand fs-3 fw-bold" asp-area="" asp-controller="Home" asp-action="Index">HankoSpa</a>

                <!-- Menú -->
                <ul class="navbar-nav @((ViewContext.RouteData.Values["controller"]?.ToString() == "Servicio" || ViewContext.RouteData.Values["controller"]?.ToString() == "Citas") ? "d-flex flex-row" : "flex-column")">
                    <li class="nav-item @((ViewContext.RouteData.Values["controller"]?.ToString() == "Servicio" || ViewContext.RouteData.Values["controller"]?.ToString() == "Citas") ? "me-3" : "mb-2")">
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Inicio</a>
                    </li>
                    <li class="nav-item @((ViewContext.RouteData.Values["controller"]?.ToString() == "Servicio" || ViewContext.RouteData.Values["controller"]?.ToString() == "Citas") ? "me-3" : "mb-2")">
                        <a class="nav-link text-dark" asp-controller="Servicio" asp-action="Index">Servicios</a>
                    </li>
                    <li class="nav-item @((ViewContext.RouteData.Values["controller"]?.ToString() == "Servicio" || ViewContext.RouteData.Values["controller"]?.ToString() == "Citas") ? "me-3" : "mb-2")">
                        <a class="nav-link text-dark" asp-controller="Citas" asp-action="Index">Citas</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-4">
        <div class="container">
            &copy; 2025 - HankoSpa - <a asp-controller="Home" asp-action="Privacy">Política de privacidad</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
